{
  "name": "@k-dang/dev-diary",
  "version": "0.2.3",
  "description": "AI-powered dev diary generator that scans git repos and summarizes your work",
  "author": "Kevin Dang <dangkevin1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-dang/dev-diary.git"
  },
  "bugs": {
    "url": "https://github.com/k-dang/dev-diary/issues"
  },
  "homepage": "https://github.com/k-dang/dev-diary#readme",
  "keywords": [
    "dev-diary",
    "git",
    "ai",
    "summary",
    "developer-tools",
    "tui",
    "bun"
  ],
  "bin": {
    "dev-diary": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "scripts/postinstall.ts",
    "README.md"
  ],
  "engines": {
    "bun": ">=1.3.2"
  },
  "type": "module",
  "private": false,
  "scripts": {
    "dev": "bun run index.tsx",
    "build": "bun run scripts/build.ts",
    "build:exe": "bun run scripts/build-exe.ts",
    "prepublishOnly": "bun run build",
    "postinstall": "bun run scripts/postinstall.ts",
    "format": "bunx biome format --write",
    "lint": "bunx biome lint",
    "lint:fix": "bunx biome lint --write",
    "check": "bunx tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.68",
    "@opentui/react": "^0.1.68",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "ai": "^6.0.6",
    "react": "^19.2.3"
  }
}
